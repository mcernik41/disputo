{block menu}
    <div class="menu">
        <ul>
            <li><a href="{link Home:default}">{_messages.menu.home}</a></li>
            <li><a href="{link PoliticalParty:default}">{_messages.party.list}</a></li>
            {if $user->isAllowed('userRequest', 'view')}
                <li><a href="{link UserRequest:default}">{_messages.user.requests.listMenu}</a></li>
            {/if}
        </ul>
        <div class="user-info">
            {if $user->isLoggedIn()}
                <span><a href="{plink Sign:profile}">{$user->getIdentity()->name}</a></span>
                <span><a href="{plink Sign:Out}">{_messages.user.logout}</a></span>
            {else}
                <span><a href="{plink Sign:In}">{_messages.user.signIn}</a></span>
                <span><a href="{plink Sign:Up}">{_messages.user.signUp}</a></span>
            {/if}
        </div>
    </div>
{/block}